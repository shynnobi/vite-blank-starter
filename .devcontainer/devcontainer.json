{
	"name": "Docker Vite Blank Starter",
	"image": "mcr.microsoft.com/devcontainers/typescript-node:1-20-bullseye",
	"features": {
		"ghcr.io/devcontainers-contrib/features/pnpm:2": {}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"dbaeumer.vscode-eslint",
				"esbenp.prettier-vscode",
				"antfu.vite",
				"ms-playwright.playwright",
				"bradlc.vscode-tailwindcss",
				"vitest.explorer"
			],
			"settings": {
				"editor.formatOnSave": true,
				"editor.defaultFormatter": "esbenp.prettier-vscode",
				"editor.insertSpaces": false,
				"editor.tabSize": 2,
				"files.eol": "\n"
			}
		}
	},
	"forwardPorts": [
		5173, // Vite dev server
		4000 // Node.js process if needed
	],
	"mounts": [
		"source=${localEnv:HOME}/.gitconfig,target=/home/node/.gitconfig,type=bind,readonly",
		"source=vite-blank-starter-node_modules,target=${containerWorkspaceFolder}/node_modules,type=volume"
	],
	"initializeCommand": "mkdir -p .devcontainer/init",
	"onCreateCommand": "if [ ! -f .devcontainer/init/.initialized ]; then npm install -g pnpm@latest && pnpm install && touch .devcontainer/init/.initialized; fi",
	"postCreateCommand": "(git rev-parse --is-inside-work-tree || git init) && git config core.hooksPath .husky && chmod +x .husky/*",
	"remoteUser": "node"
}
