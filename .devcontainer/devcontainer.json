{
	"name": "Docker Vite Blank Starter",
	"image": "mcr.microsoft.com/devcontainers/typescript-node:1-20-bullseye",
	"features": {
		"ghcr.io/devcontainers/features/common-utils:2": {
			"installZsh": true,
			"configureZshAsDefaultShell": true,
			"installOhMyZsh": true,
			"upgradePackages": true
		},
		"ghcr.io/devcontainers-contrib/features/pnpm:2": {}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"dbaeumer.vscode-eslint",
				"esbenp.prettier-vscode",
				"antfu.vite",
				"ms-playwright.playwright",
				"bradlc.vscode-tailwindcss",
				"vitest.explorer"
			],
			"settings": {
				"editor.formatOnSave": true,
				"editor.defaultFormatter": "esbenp.prettier-vscode",
				"editor.insertSpaces": false,
				"editor.tabSize": 2,
				"files.eol": "\n"
			}
		}
	},
	"forwardPorts": [
		5173, // Vite dev server
		4000 // Node.js process if needed
	],
	"mounts": ["source=${localEnv:HOME}/.gitconfig,target=/home/node/.gitconfig,type=bind,readonly"],
	"onCreateCommand": "sudo apt-get update && sudo apt-get install -y build-essential python3 && pnpm install",
	"postCreateCommand": "git init && (git checkout dev || git checkout -b dev) && git add . && git commit -m 'chore: initial commit' || true && git config core.hooksPath .husky && chmod +x .husky/*",
	"updateContentCommand": "pnpm install",
	"remoteEnv": {
		"SWC_PLATFORM_ARCH": "linux-x64-gnu",
		"npm_config_arch": "x64"
	},
	"remoteUser": "node"
}
