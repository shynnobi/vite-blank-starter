{
  "name": "vite-powerflow",
  "private": true,
  "version": "1.1.0",
  "description": "A React + Vite starter, fully containerized for reproducible and collaborative development, with strict code quality tooling and AI pair programming workflow (Cursor rules). Includes comprehensive testing, linting, and CI/CD configurations following industry best practices.",
  "author": {
    "name": "Shynn",
    "url": "http://github.com/shynnobi"
  },
  "repository": {
    "type": "git",
    "url": "git+http://github.com/shynnobi/vite-powerflow.git"
  },
  "homepage": "http://github.com/shynnobi/vite-powerflow#readme",
  "bugs": {
    "url": "http://github.com/shynnobi/vite-powerflow/issues"
  },
  "license": "MIT",
  "keywords": [
    "vite",
    "react",
    "typescript",
    "tailwindcss",
    "shadcn-ui",
    "starter-template",
    "zustand",
    "tanstack-query",
    "vitest",
    "playwright",
    "storybook",
    "eslint",
    "prettier",
    "development-workflow",
    "devcontainer",
    "husky",
    "testing"
  ],
  "type": "module",
  "packageManager": "pnpm@10.13.1+sha512.37ebf1a5c7a30d5fabe0c5df44ee8da4c965ca0c5af3dbab28c3a1681b70a256218d05c81c9c0dcf767ef6b8551eb5b960042b9ed4300c59242336377e01cfad",
  "scripts": {
    "test": "pnpm turbo run test",
    "test:e2e": "pnpm turbo run test:e2e",
    "test:all": "pnpm turbo run test && pnpm turbo run test:e2e",
    "test:coverage": "pnpm turbo run test:coverage",
    "test:coverage:report": "pnpm turbo run test:coverage:report",
    "lint": "pnpm turbo run lint",
    "lint:fix": "pnpm turbo run lint:fix",
    "format": "pnpm turbo run format",
    "format:fix": "pnpm turbo run format:fix",
    "fix": "pnpm turbo run fix",
    "validate:static": "pnpm turbo run lint && pnpm turbo run format",
    "validate:quick": "pnpm turbo run lint && pnpm turbo run format && pnpm turbo run test",
    "validate:full": "pnpm turbo run lint && pnpm turbo run format && pnpm turbo run test && pnpm turbo run test:e2e",
    "validate:precommit": "npx lint-staged && pnpm test",
    "prepare": "husky",
    "postinstall": "./scripts/postinstall.sh",
    "sync-root-to-starter": "tsx packages/tools/src/cli-scripts/sync-root-to-starter.mts",
    "sync-starter-to-cli": "tsx packages/tools/src/cli-scripts/sync-starter-to-template.mts",
    "sync-all": "pnpm sync-root-to-starter && pnpm sync-starter-to-cli",
    "cli:build": "pnpm --filter @vite-powerflow/create build",
    "cli:start": "node packages/cli/dist/index.js",
    "cli:buista": "pnpm cli:build && node packages/cli/dist/index.js",
    "sta:dev": "pnpm -filter @vite-powerflow/starter dev",
    "sta:storybook": "pnpm --filter @vite-powerflow/starter storybook"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.30.1",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "dir-compare": "^5.0.0",
    "eslint": "^9.30.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "execa": "^9.6.0",
    "fs-extra": "^11.3.0",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "listr2": "^8.3.3",
    "prettier": "^3.6.2",
    "tmp-promise": "^3.0.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.3",
    "turbo": "^2.5.4",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "pnpm": {
    "ignoredBuiltDependencies": [
      "@swc/core",
      "esbuild",
      "msw"
    ],
    "overrides": {
      "rollup": "npm:@rollup/wasm-node",
      "esbuild": "npm:esbuild-wasm@latest"
    }
  }
}
