{
	"name": "vite-powerflow",
	"private": true,
	"version": "1.1.0",
	"description": "A React + Vite starter, fully containerized for reproducible and collaborative development, with strict code quality tooling and AI pair programming workflow (Cursor rules). Includes comprehensive testing, linting, and CI/CD configurations following industry best practices.",
	"author": {
		"name": "Shynn",
		"url": "http://github.com/shynnobi"
	},
	"repository": {
		"type": "git",
		"url": "git+http://github.com/shynnobi/vite-powerflow.git"
	},
	"homepage": "http://github.com/shynnobi/vite-powerflow#readme",
	"bugs": {
		"url": "http://github.com/shynnobi/vite-powerflow/issues"
	},
	"license": "MIT",
	"keywords": [
		"vite",
		"react",
		"typescript",
		"tailwindcss",
		"shadcn-ui",
		"starter-template",
		"zustand",
		"tanstack-query",
		"vitest",
		"playwright",
		"storybook",
		"eslint",
		"prettier",
		"development-workflow",
		"devcontainer",
		"husky",
		"testing"
	],
	"type": "module",
	"packageManager": "pnpm@10.6.5",
	"scripts": {
		"dev": "vite",
		"build": "tsc && vite build",
		"preview": "vite preview",
		"test": "vitest run",
		"test:unit": "vitest run tests/unit",
		"test:integration": "vitest run tests/integration",
		"test:e2e": "sh ./scripts/ai-workflow/ai-run-e2e-tests.sh",
		"test:e2e:ui": "playwright test --ui --ui-host 0.0.0.0 --ui-port 9324",
		"test:e2e:report": "playwright show-report --host 0.0.0.0 --port 9323",
		"test:e2e:verbose": "playwright test --trace on",
		"test:all": "vitest run tests/unit && vitest run tests/integration && sh ./scripts/e2e.sh",
		"test:coverage": "vitest run --coverage",
		"test:coverage:report": "vitest run --coverage --reporter=html",
		"lint": "eslint src tests --ext ts,tsx,js,jsx",
		"lint:fix": "eslint . --ext ts,tsx,js,jsx --fix",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"fix": "prettier --write . && eslint . --ext ts,tsx,js,jsx --fix",
		"type-check": "tsc --noEmit",
		"validate:static": "run-p format:check lint type-check",
		"validate:unit": "run-p test:unit test:integration",
		"validate:e2e": "run-p test:e2e",
		"validate:quick": "run-s validate:static validate:unit",
		"validate:full": "run-s validate:static validate:unit validate:e2e",
		"validate:precommit": "npx lint-staged && pnpm validate:unit",
		"prepare": "husky",
		"postinstall": "node -e \"try { require('child_process').execSync('git rev-parse --is-inside-work-tree', {stdio: 'ignore'}); } catch (e) { require('child_process').execSync('git init', {stdio: 'inherit'}); } process.exit(0);\" && git config core.hooksPath .husky && chmod +x .husky/*",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx}": [
			"prettier --write",
			"eslint --fix --max-warnings=0"
		],
		"*.{json,yml,yaml,md}": [
			"prettier --write"
		],
		"*.{css,scss}": [
			"prettier --write"
		]
	},
	"devDependencies": {
		"@axe-core/playwright": "^4.10.1",
		"@chromatic-com/storybook": "^3",
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"@eslint/eslintrc": "^3.3.1",
		"@eslint/js": "^9.27.0",
		"@playwright/test": "^1.52.0",
		"@storybook/addon-a11y": "^8.6.14",
		"@storybook/addon-actions": "^8.6.14",
		"@storybook/addon-essentials": "^8.6.14",
		"@storybook/addon-measure": "^8.6.14",
		"@storybook/addon-themes": "^8.6.14",
		"@storybook/addon-viewport": "^8.6.14",
		"@storybook/blocks": "^8.6.14",
		"@storybook/experimental-addon-test": "^8.6.14",
		"@storybook/react": "^8.6.14",
		"@storybook/react-vite": "^8.6.14",
		"@storybook/test": "^8.6.14",
		"@storybook/test-runner": "^0.22.0",
		"@swc/core": "^1.11.24",
		"@testing-library/jest-dom": "^6.4.2",
		"@testing-library/react": "^16.3.0",
		"@testing-library/user-event": "^14.6.1",
		"@types/jest-axe": "^3.5.9",
		"@types/react": "^19.1.4",
		"@types/react-dom": "^19.1.5",
		"@typescript-eslint/eslint-plugin": "^8.32.1",
		"@typescript-eslint/parser": "^8.32.1",
		"@vitejs/plugin-react-swc": "^3.9.0",
		"@vitest/browser": "3.1.3",
		"@vitest/coverage-v8": "^3.1.3",
		"@vitest/ui": "^3.1.3",
		"eslint": "^9.27.0",
		"eslint-plugin-jsx-a11y": "^6.10.2",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^5.2.0",
		"eslint-plugin-react-refresh": "^0.4.20",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"eslint-plugin-storybook": "^0.12.0",
		"globals": "^16.1.0",
		"husky": "^9.0.11",
		"jest-axe": "^10.0.0",
		"jsdom": "^26.1.0",
		"lint-staged": "^16.0.0",
		"npm-run-all": "^4.1.5",
		"playwright": "^1.52.0",
		"prettier": "^3.2.5",
		"react": "^19.1.0",
		"react-dom": "^19.1.0",
		"rollup-plugin-visualizer": "^5.14.0",
		"storybook": "^8.6.14",
		"typescript": "^5.8.3",
		"vite": "^6.3.5",
		"vitest": "^3.1.3"
	},
	"pnpm": {
		"ignoredBuiltDependencies": [
			"@swc/core",
			"esbuild"
		],
		"overrides": {
			"rollup": "npm:@rollup/wasm-node",
			"esbuild": "npm:esbuild-wasm@latest"
		}
	},
	"dependencies": {
		"@radix-ui/react-dropdown-menu": "^2.1.7",
		"@radix-ui/react-slot": "^1.2.0",
		"@rollup/rollup-darwin-arm64": "^4.40.0",
		"@tailwindcss/vite": "^4.1.3",
		"@tanstack/react-query": "^5.74.0",
		"@tanstack/react-query-devtools": "^5.74.0",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"lucide-react": "^0.488.0",
		"react-icons": "^5.5.0",
		"react-router-dom": "^7.5.0",
		"rollup": "^4.40.0",
		"tailwind-merge": "^3.2.0",
		"tailwindcss": "^4.1.3",
		"tw-animate-css": "^1.2.5",
		"zustand": "^5.0.3"
	}
}
