{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "noEmit": false,
    "resolveJsonModule": true,
    "module": "ES2022",
    "moduleResolution": "bundler"
  },
  "include": ["src/**/*"],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/build.ts",
    "**/*.test.ts",
    "**/*.spec.ts",
    "node_modules"
  ]
}
