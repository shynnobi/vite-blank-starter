name: Branch Protection Check

on:
  push:
    branches:
      - main
      - dev
  pull_request:
    branches:
      - main
      - dev

jobs:
  check:
    name: Branch Protection Check
    runs-on: ubuntu-latest
    steps:
      - name: Check branch protection
        run: |
          if [[ "${{ github.ref }}" == "refs/heads/main" || "${{ github.ref }}" == "refs/heads/dev" ]]; then
            echo "‚úÖ Running on protected branch: ${GITHUB_REF#refs/heads/}"

            # V√©rifier que tous les checks requis sont pass√©s
            if [[ "${{ github.event_name }}" == "pull_request" ]]; then
              echo "üìù Checking required status checks..."
            fi
          else
            echo "‚ö†Ô∏è Not a protected branch"
          fi
