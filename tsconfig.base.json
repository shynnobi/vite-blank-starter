{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@starter/*": ["packages/starter/*"],
      "@cli/*": ["packages/cli/*"],
      "@tools/*": ["packages/tools/*"]
    }
  }
}
