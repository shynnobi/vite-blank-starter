  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": false,
    "baseUrl": ".",
    "paths": {
      "@vite-powerflow/create": ["packages/cli/dist/index.js"],
      "@vite-powerflow/create/*": ["packages/cli/dist/*"],
      "@vite-powerflow/tools": ["packages/tools/dist/index.js"],
      "@vite-powerflow/tools/*": ["packages/tools/dist/*"]
    }
  }
}
