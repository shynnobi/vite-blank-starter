{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": false,
    "baseUrl": ".",
    "paths": {
      "@vite-powerflow/create": ["packages/cli/src/index.ts"],
      "@vite-powerflow/create/*": ["packages/cli/src/*"],
      "@vite-powerflow/utils": ["packages/utils/src/index.ts"],
      "@vite-powerflow/utils/*": ["packages/utils/src/*"]
    }
  }
}
