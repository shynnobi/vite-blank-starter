{
  "name": "@vite-powerflow/create",
  "private": false,
  "version": "0.0.1",
  "description": "CLI tool to create a new Vite PowerFlow app",
  "type": "module",
  "bin": {
    "create": "dist/index.js"
  },
  "scripts": {
    "build": "tsx build.ts && mkdir -p dist && cp -r template dist/template",
    "dev": "tsc -w",
    "start": "node dist/index.js",
    "test": "vitest run",
    "lint": "eslint . --ext ts,tsx,js,jsx",
    "lint:fix": "eslint . --ext ts,tsx,js,jsx --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "fix": "prettier --write . && eslint . --ext ts,tsx,js,jsx --fix",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "cli",
    "powerflow",
    "react",
    "vite",
    "typescript"
  ],
  "author": {
    "name": "Shynn",
    "url": "http://github.com/shynnobi"
  },
  "license": "MIT",
  "packageManager": "pnpm@10.6.5",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/fs-extra": "^11.0.4",
    "@types/validator": "^13.15.2",
    "esbuild": "npm:esbuild-wasm@^0.25.6",
    "fs-extra": "^11.3.0",
    "tmp-promise": "^3.0.3",
    "vitest": "^1.6.1"
  },
  "dependencies": {
    "@sindresorhus/slugify": "^2.2.1",
    "@vite-powerflow/tools": "workspace:*",
    "chalk": "^5.4.1",
    "commander": "^14.0.0",
    "enquirer": "^2.4.1",
    "find-up": "^7.0.0",
    "ora": "^8.2.0",
    "simple-git": "^3.28.0",
    "tsconfig-paths": "^4.2.0",
    "validator": "^13.15.15"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts"
}
