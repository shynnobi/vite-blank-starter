{
  "name": "@vite-powerflow/create",
  "version": "1.0.0",
  "description": "CLI tool to create a new Vite PowerFlow app",
  "type": "module",
  "bin": {
    "create": "dist/index.js"
  },
  "scripts": {
    "prebuild": "pnpm --workspace-root sync-starter-to-cli",
    "build": "rm -rf dist && tsc && mkdir -p dist && cp -r template dist/template",
    "dev": "tsc -w",
    "start": "node -r tsconfig-paths/register dist/index.js",
    "test": "vitest run",
    "lint": "eslint . --ext ts,tsx,js,jsx",
    "lint:fix": "eslint . --ext ts,tsx,js,jsx --fix",
    "fix": "prettier --write . && eslint . --ext ts,tsx,js,jsx --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "validate:precommit": "pnpm format && pnpm lint && pnpm test"
  },
  "keywords": [
    "cli",
    "powerflow",
    "react",
    "vite",
    "typescript"
  ],
  "author": {
    "name": "Shynn",
    "url": "http://github.com/shynnobi"
  },
  "license": "MIT",
  "packageManager": "pnpm@10.6.5",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.8",
    "@types/node": "^22.15.33",
    "fs-extra": "^11.3.0",
    "tmp-promise": "^3.0.3",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "@vite-powerflow/tools": "workspace:*",
    "chalk": "^5.4.1",
    "find-up": "^7.0.0",
    "inquirer": "^9.3.7",
    "ora": "^8.2.0",
    "simple-git": "^3.28.0",
    "tsconfig-paths": "^4.2.0"
  }
}
