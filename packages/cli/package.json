{
  "name": "create-vite-powerflow",
  "version": "1.0.4b",
  "description": "CLI tool to create a new Vite PowerFlow app",
  "type": "module",
  "bin": {
    "create-vite-powerflow": "dist/index.js"
  },
  "scripts": {
    "prebuild": "pnpm --workspace-root sync-template",
    "build": "tsc && cp -r template dist/template",
    "dev": "tsc -w",
    "start": "node dist/index.js",
    "test": "vitest run",
    "prepublishOnly": "pnpm sync-template && pnpm build"
  },
  "keywords": [
    "cli",
    "powerflow",
    "react",
    "vite",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.6.5",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.8",
    "@types/node": "^22.15.33",
    "fs-extra": "^11.3.0",
    "tmp-promise": "^3.0.3",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "find-up": "^7.0.0",
    "inquirer": "^9.3.7",
    "ora": "^8.2.0",
    "simple-git": "^3.28.0"
  }
}
